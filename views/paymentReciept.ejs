      }

      .border-around {
        border: 1px solid rgb(218, 218, 218);
      }

      .revert-text {
        padding-right: 30px;
      }

      .para {
        position: relative;
        padding-top: 15px;
      }

      .para span {
        margin-top: 15px;
        font-weight: bold;
      }

      p span {
        position: absolute;
        left: 270px;
        top: 0;
      }

      .details {
        margin-top: 0;
      }

      @media screen and (max-width: 991px) {
        p span {
          left: 270px;
          top: 0;
        }
      }

